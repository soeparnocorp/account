  <script>
    // ===== GLOBAL =====
    let currentWebSocket = null;
    let username = '';
    let roomname = '';
    let avatarBase64 = localStorage.getItem('readtalk_avatar') || '';

    // DOM elements
    const nameForm = document.getElementById('name-form');
    const nameInput = document.getElementById('name-input');
    const roomNameInput = document.getElementById('room-name-input');
    const goPublic = document.getElementById('go-public');
    const roomPanel = document.getElementById('room-panel');
    const usersContainer = document.getElementById('users-container');
    const threeDotsBtn = document.getElementById('threeDotsBtn');
    const dotsMenu = document.getElementById('dotsMenu');
    const settingsBtn = document.getElementById('settingsBtn');
    const profileModal = document.getElementById('profileModal');
    const themeToggle = document.getElementById('themeToggle');

    // Avatar elements
    const avatarPreview = document.getElementById('avatar-preview');
    const avatarImage = document.getElementById('avatar-image');
    const avatarPlaceholder = document.getElementById('avatar-placeholder');
    const avatarUpload = document.getElementById('avatar-upload');

    // Edit name modal (sementara)
    const editNameBtn = document.getElementById('edit-name-btn');
    const editModal = document.getElementById('edit-name-modal');
    const editInput = document.getElementById('edit-name-input');
    const cancelEdit = document.getElementById('cancel-edit');
    const saveEdit = document.getElementById('save-edit');
    const displayName = document.getElementById('display-name'); // Masih ada di DOM lama, akan dihapus nanti
    const displayRoom = document.getElementById('display-room');
    const chatAvatar = document.getElementById('chat-avatar');

    let hostname = window.location.host;
    if (!hostname) hostname = 'localhost:8787';

    // ===== LOAD SAVED DATA =====
    const savedUsername = localStorage.getItem('readtalk_username');
    if (savedUsername) nameInput.value = savedUsername;
    if (avatarBase64) {
      avatarImage.src = avatarBase64;
      avatarImage.style.display = 'block';
      avatarPlaceholder.style.display = 'none';
    }

    // ===== AVATAR UPLOAD =====
    avatarUpload.addEventListener('change', (e) => {
      const file = e.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = (ev) => {
          avatarBase64 = ev.target.result;
          avatarImage.src = avatarBase64;
          avatarImage.style.display = 'block';
          avatarPlaceholder.style.display = 'none';
          localStorage.setItem('readtalk_avatar', avatarBase64);
        };
        reader.readAsDataURL(file);
      }
    });

    // ===== HASH HANDLING =====
    if (window.location.hash.length > 1) {
      roomname = window.location.hash.slice(1);
      roomNameInput.value = roomname;
      roomNameInput.disabled = true;
    } else {
      roomNameInput.disabled = false;
    }

    // ===== GO BUTTON =====
    goPublic.addEventListener('click', () => {
      username = nameInput.value.trim();
      roomname = roomNameInput.value.trim() || window.location.hash.slice(1);

      if (!username) { alert('Enter your name'); nameInput.focus(); return; }
      if (!roomname) { alert('Enter room name'); roomNameInput.focus(); return; }

      roomname = roomname.replace(/[^a-zA-Z0-9_-]/g, '').toLowerCase();
      if (roomname.length > 32) { alert('Max 32 chars'); return; }

      localStorage.setItem('readtalk_username', username);
      if (avatarBase64) localStorage.setItem('readtalk_avatar', avatarBase64);

      window.location.hash = roomname;
      startRoomPanel();
    });

    roomNameInput.addEventListener('keypress', (e) => {
      if (e.key === 'Enter') { e.preventDefault(); goPublic.click(); }
    });

    // ===== START ROOM PANEL (GANTI STARTCHAT) =====
    function startRoomPanel() {
      nameForm.style.display = 'none';
      roomPanel.style.display = 'flex';

      // Tampilkan user sendiri di list (sementara, nanti dari WebSocket)
      addUserToList({
        name: username,
        status: 'online',
        avatar: avatarBase64,
        isYou: true
      });

      // Koneksi WebSocket tetap sama
      joinWebSocket();
    }

    // ===== WEBSOCKET (TETAP SAMA) =====
    function joinWebSocket() {
      const wss = document.location.protocol === 'http:' ? 'ws://' : 'wss://';
      const ws = new WebSocket(`${wss}${hostname}/api/room/${roomname}/websocket`);
      let rejoined = false;
      let startTime = Date.now();

      const rejoin = async () => {
        if (!rejoined) {
          rejoined = true;
          currentWebSocket = null;
          const timeSince = Date.now() - startTime;
          if (timeSince < 10000) await new Promise(r => setTimeout(r, 10000 - timeSince));
          joinWebSocket();
        }
      };

      ws.addEventListener('open', () => {
        currentWebSocket = ws;
        ws.send(JSON.stringify({ name: username, avatar: avatarBase64 }));
      });

      ws.addEventListener('message', (event) => {
        const data = JSON.parse(event.data);
        
        if (data.error) {
          console.error('WebSocket error:', data.error);
        } else if (data.joined) {
          // User lain join
          addUserToList({ name: data.joined, status: 'online' });
        } else if (data.quit) {
          // User keluar
          removeUserFromList(data.quit);
        } else if (data.ready) {
          // Siap, bisa request list users
          console.log('Ready, room:', roomname);
        } else if (data.name_changed) {
          // Update nama user
          updateUserName(data.oldName, data.newName);
        }
        // Abaikan pesan chat (data.message) karena kita userbased
      });

      ws.addEventListener('close', rejoin);
      ws.addEventListener('error', rejoin);
    }

    // ===== USER LIST FUNCTIONS =====
    function addUserToList(user) {
      const userEl = document.createElement('div');
      userEl.className = 'user-item';
      userEl.dataset.username = user.name;
      
      const statusClass = user.status === 'online' ? 'status-online' : 
                         user.status === 'away' ? 'status-away' : 
                         user.status === 'busy' ? 'status-busy' : 'status-offline';
      
      userEl.innerHTML = `
        <img class="user-avatar" src="${user.avatar || 'data:image/svg+xml,%3Csvg...%3E'}" alt="avatar">
        <div class="user-info">
          <div class="user-name">
            <span class="status-indicator ${statusClass}"></span>
            ${user.name} ${user.isYou ? '(kamu)' : ''}
          </div>
          <div class="user-status">${user.status || 'online'}</div>
        </div>
      `;
      
      usersContainer.appendChild(userEl);
    }

    function removeUserFromList(username) {
      const items = document.querySelectorAll('.user-item');
      items.forEach(item => {
        if (item.dataset.username === username) {
          item.remove();
        }
      });
    }

    function updateUserName(oldName, newName) {
      const items = document.querySelectorAll('.user-item');
      items.forEach(item => {
        if (item.dataset.username === oldName) {
          item.dataset.username = newName;
          const nameSpan = item.querySelector('.user-name');
          if (nameSpan) {
            nameSpan.innerHTML = nameSpan.innerHTML.replace(oldName, newName);
          }
        }
      });
    }

    // ===== 3 TITIK MENU =====
    threeDotsBtn.addEventListener('click', () => {
      dotsMenu.classList.toggle('hidden');
    });

    document.addEventListener('click', (e) => {
      if (!threeDotsBtn.contains(e.target) && !dotsMenu.contains(e.target)) {
        dotsMenu.classList.add('hidden');
      }
    });

    // ===== SETTINGS MENU ‚Üí BUKA MODAL 4 LAYER =====
    settingsBtn.addEventListener('click', () => {
      profileModal.classList.remove('hidden');
      dotsMenu.classList.add('hidden');
    });

    // ===== CLOSE MODAL =====
    profileModal.addEventListener('click', (e) => {
      if (e.target === profileModal) {
        profileModal.classList.add('hidden');
      }
    });

    // ===== THEME TOGGLE (OPSIONAL) =====
    themeToggle.addEventListener('click', () => {
      document.body.classList.toggle('dark-mode');
      // Loe bisa tambahin CSS dark mode nanti
    });

    // ===== BOTTOM NAV =====
    document.querySelectorAll('.nav-item').forEach(btn => {
      btn.addEventListener('click', function() {
        document.querySelectorAll('.nav-item').forEach(b => b.classList.remove('active'));
        this.classList.add('active');
        // Nanti loe handle tab change
      });
    });

    // ===== EDIT NAME MODAL (SEMENTARA) =====
    // Nanti akan dipindah ke modal 4 layer
    if (editNameBtn) {
      editNameBtn.addEventListener('click', () => {
        editInput.value = username;
        editModal.style.display = 'flex';
      });
    }

    cancelEdit.addEventListener('click', () => {
      editModal.style.display = 'none';
    });

    saveEdit.addEventListener('click', () => {
      const newName = editInput.value.trim();
      if (newName && newName !== username) {
        username = newName;
        localStorage.setItem('readtalk_username', newName);
        if (currentWebSocket) {
          currentWebSocket.send(JSON.stringify({ type: 'update_name', newName }));
        }
        // Update di UI
        const userItems = document.querySelectorAll('.user-item');
        userItems.forEach(item => {
          if (item.dataset.username === username) {
            const nameSpan = item.querySelector('.user-name');
            if (nameSpan) {
              nameSpan.innerHTML = nameSpan.innerHTML.replace(username, newName);
            }
            item.dataset.username = newName;
          }
        });
      }
      editModal.style.display = 'none';
    });

    editModal.addEventListener('click', (e) => {
      if (e.target === editModal) editModal.style.display = 'none';
    });

    // ===== AUTO RESTORE SESSION =====
    (function init() {
      const savedUser = localStorage.getItem('readtalk_username');
      const roomHash = window.location.hash.slice(1);
      if (savedUser && roomHash) {
        username = savedUser;
        roomname = roomHash;
        avatarBase64 = localStorage.getItem('readtalk_avatar') || '';
        nameInput.value = savedUser;
        roomNameInput.value = roomHash;
        roomNameInput.disabled = true;
        startRoomPanel();
      }
    })();
  </script>
</body>
</html>
