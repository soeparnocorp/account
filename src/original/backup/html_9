  <!-- ===== MODAL EDIT NAME (SEMENTARA TETAP, NANTI DIGABUNG) ===== -->
  <div id="edit-name-modal">
    <div class="edit-modal-content">
      <h3>Edit your name</h3>
      <input type="text" id="edit-name-input" maxlength="32" placeholder="new name">
      <div style="display: flex; gap: 12px; justify-content: flex-end; margin-top: 20px;">
        <button id="cancel-edit" style="padding: 10px 24px; border-radius: 40px; border: none; background: #f0f2f5; cursor: pointer;">Cancel</button>
